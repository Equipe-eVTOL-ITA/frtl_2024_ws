{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        // Simulate task
        {
            "label": "simulate",
            "detail": "Launch Gazebo Simulation",
            "type": "shell",
            "command": "./tasks/simulate.sh ${input:sim_world}",
            "problemMatcher": []
        },
        // Image Bridge task
        {
            "label": "image bridge",
            "type": "shell",
            "command": "./tasks/image_bridge.sh",
            "problemMatcher": [],
            "detail": "Launch ros_gz_image bridge"
        },
        // Compound task for simulate and image bridge
        {
            "label": "simulate & image bridge",
            "dependsOn": ["simulate", "image bridge"],
            "detail": "Launch both the simulation and image bridge"
        },
        // Agent task
        {
            "label": "agent",
            "detail": "Launch Micro XRCE Agent",
            "type": "shell",
            "command": "./tasks/agent.sh",
            "problemMatcher": []
        },
        // Build task
        {
            "label": "build",
            "detail": "Build workspace (default)",
            "type": "shell",
        "command": "./tasks/build.sh ${input:buildFolder}",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$gcc"
        },
        // Setup task
        {
            "label": "setup",
            "detail": "Set up the workspace",
            "type": "shell",
            "command": "./tasks/setup.sh",
            "problemMatcher": []
        },
    ],
    "inputs": [
        {
            "id" : "sim_world",
            "description": "Choose World to launch from",
            "type": "pickString",
            "options": [
                "fase1",
                "fase2",
                "fase3",
                "fase4",
                "empty"
            ],
            "default": "fase1"
        },
        {
            "id" : "buildFolder",
            "description": "Which targets to build?",
            "type": "pickString",
            "options": [
                "all",
                "frtl_2024",
                "dependencies",
                "gesture_packages (camera publisher + gesture classifier)",
                "cv_utils",
                "fase1",
                "fase2",
                "fase3",
                "fase4"
            ],
            "default": "all"
        }
    ]
}